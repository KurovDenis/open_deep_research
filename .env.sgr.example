# SGR Configuration Environment Variables
# Скопируйте этот файл в .env и заполните своими API ключами

# OpenRouter API Key (для доступа к различным моделям через единый интерфейс)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here

# Tavily API Key (для веб-поиска)
TAVILY_API_KEY=tvly-your-tavily-key-here

# SGR Streaming Configuration
STREAMING_ENABLED=true
STREAMING_DISPLAY_TYPE=enhanced
STREAMING_UPDATE_INTERVAL=0.1
STREAMING_ANIMATION_SPEED=1.0

# SGR Schema Configuration
SGR_SCHEMA_VALIDATION=true
SGR_MAX_REASONING_STEPS=4
SGR_CONFIDENCE_THRESHOLD=0.7

# Monitoring Configuration
ENABLE_LIVE_MONITOR=true
ENABLE_STEP_TRACKER=true
ENABLE_PROGRESS_BAR=true

# Дополнительные переменные (опционально)
# OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# Примечания:
# 1. Никогда не коммитьте .env файл в git репозиторий
# 2. Добавьте .env в .gitignore
# 3. Получите API ключи:
#    - OpenRouter: https://openrouter.ai/keys
#    - Tavily: https://app.tavily.com/